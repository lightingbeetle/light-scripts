{
  "name": "light-scripts",
  "version": "2.3.4",
  "description": "Build scripts for Lighting Beetle* light framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightingbeetle/light-scripts"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Lighting Beetle, Adam Mockor",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "autoprefixer": "~9.7.4",
    "babel-loader": "~8.0.6",
    "browser-sync": "~2.26.7",
    "bs-pretty-message": "~1.0.8",
    "connect-modrewrite": "~0.10.2",
    "cssnano": "~4.1.10",
    "del": "~5.1.0",
    "eslint": "~6.8.0",
    "eslint-loader": "~3.0.3",
    "glob": "~7.1.6",
    "gulp": "~4.0.2",
    "gulp-cache": "~1.1.3",
    "gulp-cached": "~1.1.1",
    "gulp-changed": "~4.0.2",
    "gulp-cheerio": "~1.0.0",
    "gulp-concat": "~2.6.1",
    "gulp-data": "~1.3.1",
    "gulp-extend": "~0.3.0",
    "gulp-filter": "~6.0.0",
    "gulp-help": "~1.6.1",
    "gulp-if": "~3.0.0",
    "gulp-imagemin": "~7.1.0",
    "gulp-modernizr": "~3.4.1",
    "gulp-notify": "~3.2.0",
    "gulp-plumber": "~1.2.1",
    "gulp-postcss": "~8.0.0",
    "gulp-pug": "~4.0.1",
    "gulp-pug-inheritance": "~0.2.1",
    "gulp-rename": "~2.0.0",
    "gulp-rev": "~9.0.0",
    "gulp-rev-all": "~2.0.2",
    "gulp-rev-replace": "~0.4.4",
    "gulp-rsync": "~0.0.8",
    "gulp-sass": "~4.0.2",
    "gulp-size": "~3.0.0",
    "gulp-sourcemaps": "~2.6.5",
    "gulp-stylelint": "~13.0.0",
    "gulp-svgstore": "~7.0.1",
    "gulp-util": "~3.0.8",
    "gulp-yaml-merge": "~2.0.0",
    "js-yaml": "~3.13.1",
    "lodash": "~4.17.15",
    "map-stream": "~0.0.7",
    "md5-file": "~4.0.0",
    "node-notifier": "~6.0.0",
    "postcss-inline-svg": "~4.1.0",
    "pug": "~2.0.4",
    "vinyl-named": "~1.1.0",
    "webpack": "~4.41.6",
    "yargs": "~15.1.0"
  },
  "devDependencies": {
    "eslint-config-airbnb-base": "~14.0.0",
    "eslint-plugin-import": "~2.20.1",
    "lint-staged": "~9.0.0",
    "pre-commit": "~1.2.2"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": [
      "eslint --fix --rule 'no-console: 2'",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false,
          "loose": true,
          "targets": {
            "browsers": [
              "defaults"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "never"
        }
      ]
    },
    "globals": {
      "$": true,
      "jQuery": true,
      "Modernizr": true,
      "window": true
    },
    "env": {
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    }
  },
  "stylelint": {
    "rules": {}
  }
}
