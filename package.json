{
  "name": "light-scripts",
  "version": "1.0.2",
  "description": "Build scripts for Lighting Beetle* light framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightingbeetle/light-scripts"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Lighting Beetle, Adam Mockor",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "~6.7.5",
    "babel-core": "~6.24.0",
    "babel-loader": "~6.4.0",
    "babel-plugin-transform-class-properties": "~6.23.0",
    "babel-plugin-transform-object-rest-spread": "~6.23.0",
    "babel-preset-env": "~1.2.0",
    "browser-sync": "~2.18.8",
    "bs-pretty-message": "~1.0.8",
    "connect-modrewrite": "~0.10.1",
    "cssnano": "~3.10.0",
    "del": "~2.2.2",
    "eslint": "~3.17.0",
    "eslint-config-airbnb-base": "~11.1.0",
    "eslint-loader": "~1.6.3",
    "eslint-plugin-import": "~2.2.0",
    "glob": "~7.1.1",
    "gulp": "~3.9.1",
    "gulp-cache": "~0.4.5",
    "gulp-cached": "~1.1.1",
    "gulp-changed": "~2.0.0",
    "gulp-cheerio": "~0.6.2",
    "gulp-concat": "~2.6.1",
    "gulp-data": "~1.2.1",
    "gulp-extend": "~0.2.0",
    "gulp-filter": "~5.0.0",
    "gulp-help": "~1.6.1",
    "gulp-if": "~2.0.2",
    "gulp-imagemin": "~3.1.1",
    "gulp-modernizr": "~1.0.0-alpha",
    "gulp-notify": "~3.0.0",
    "gulp-plumber": "~1.1.0",
    "gulp-postcss": "~6.3.0",
    "gulp-pug": "~3.3.0",
    "gulp-pug-inheritance": "~0.2.1",
    "gulp-rename": "~1.2.2",
    "gulp-rev": "~7.1.2",
    "gulp-rev-replace": "~0.4.3",
    "gulp-rsync": "~0.0.7",
    "gulp-sass": "~3.1.0",
    "gulp-size": "~2.1.0",
    "gulp-sourcemaps": "~2.4.1",
    "gulp-svgstore": "~6.1.0",
    "gulp-util": "~3.0.8",
    "gulp-yaml-merge": "adammockor/gulp-yaml-merge",
    "js-yaml": "~3.8.1",
    "lodash": "~4.17.4",
    "map-stream": "~0.0.6",
    "md5-file": "~3.1.1",
    "node-notifier": "^5.0.2",
    "postcss-inline-svg": "~2.3.0",
    "pug": "~2.0.0-beta11",
    "require-dir": "~0.3.1",
    "run-sequence": "~1.2.2",
    "vinyl-named": "~1.1.0",
    "webpack": "~2.2.1",
    "yargs": "~7.0.1"
  },
  "devDependencies": {
    "lint-staged": "~3.4.0",
    "pre-commit": "~1.2.2"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false,
          "loose": true,
          "targets": {
            "browsers": [
              "defaults"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "never"
        }
      ]
    },
    "globals": {
      "$": true,
      "jQuery": true,
      "Modernizr": true,
      "window": true
    },
    "env": {
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    }
  }
}
